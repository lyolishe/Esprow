{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@pages/*": ["Pages/*"],
      "@shared/*": ["Shared/*"],
      "@app/*": ["App/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "*.config.ts",
    "*.config.js"
  ],
}